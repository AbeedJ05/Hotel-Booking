<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    app:cardCornerRadius="15dp"
    android:padding="5dp"
    android:id="@+id/card_view1"
    android:clickable="true"
    app:cardUseCompatPadding="true"
    android:focusable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtHotelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#162575"
            android:textStyle="bold"
            android:text="Hotel Name"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/txtRoomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#4CAF50"
            android:text="Room Name"
            android:layout_marginTop="8dp" />
        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#2196F3"
            android:text="00.00"
            android:layout_marginTop="8dp" />
        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#030B12"
            android:textStyle="bold"
            android:text="description"
            android:layout_marginTop="8dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnEditRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textColor="#FFFFFF"
                android:backgroundTint="#3F51B5"

                android:layout_marginTop="16dp" />
            <Button
                android:id="@+id/buttonDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:layout_marginLeft="@dimen/car_ui_padding_5"
                android:textColor="#FFFFFF"
                android:backgroundTint="#E40707"
                android:layout_marginTop="16dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>